@using PagedList;
@using PagedList.Mvc;

@model IPagedList<DataAccess.DataModel.Car>
@{
    ViewBag.Title = "Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of cars</h2>

@using (Html.BeginForm("Index", "Car", FormMethod.Get))
{
<div class="form-group">
    @Html.TextBox("Search",null, new { @class="form-control"})
</div>
    
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Car Model</th>
            <th scope="col">Location</th>
            <th scope="col">Price per Day</th>
        </tr>
    </thead>
    <tbody>
        @try
        {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td class="Car"><a>@item.CarModel</a></td>
                        <td>@item.Location</td>
                        <td>RM @item.PricePerDay</td>
                    </tr>
                }
        }
        catch
        {
            <tr>
                <td colspan="4" style="text-align:center">No Internet Connection<td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model,
    page => Url.Action("Index",
        new
        {
            page,
            Search = Request.QueryString["Search"]
        }
        ),
    new PagedListRenderOptions()
    {
        UlElementClasses= new [] {"pagination"},
        LiElementClasses= new [] {"page-item", "page-link"}
    })

<button class="btn btn-primary">Test</button>

