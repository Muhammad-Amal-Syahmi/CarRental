@using PagedList;
@using PagedList.Mvc;

@model IPagedList<DataAccess.DataModel.Car>
@{
    ViewBag.Title = "Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Cars</h2>

<div class="container">
    <div class="row">
        <div class="col-10">
            @using (Html.BeginForm("Index", "Car", FormMethod.Get))
            {
            <div class="row">
                <div class="container body-content">
                    @Html.RadioButton("SearchType", "CarModel", new { @checked = "checked" })
                    Car Model
                    @Html.RadioButton("SearchType", "Location")
                    Location
                </div>
                <div class="form-group searchInput">
                    @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search Car Model..." })
                </div>
                <div>
                    <input type="submit" value="Search" class="btn btn-light" />
                </div>
            </div>
            }
        </div>
        <div class="col-2">
            @Html.ActionLink("Add Car", "Add", "Car", new { area = "" }, new { @class = "btn btn-primary float-right" })
        </div>
    </div>
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="">
            <th scope="col">Id</th>
            <th scope="col">Car Model</th>
            <th scope="col">Location</th>
            <th scope="col">Price per Day</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @try
        {
            var count = 0;
            foreach (var item in Model)
            {
                if (count % 2 == 0)
                {
                    <tr class="table-light">
                        <th scope="row" style="width: 7%">@item.Id</th>
                        <td class="Car"><a>@item.CarModel</a></td>
                        <td>@item.Location</td>
                        <td>RM @String.Format("{0:0.00}", item.PricePerDay)</td>
                        <td style="width: 15%">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="table-primary">
                        <th scope="row" style="width: 7%">@item.Id</th>
                        <td class="Car"><a>@item.CarModel</a></td>
                        <td>@item.Location</td>
                        <td>RM @String.Format("{0:0.00}", item.PricePerDay)</td>
                        <td style="width: 15%">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
                count++;
            }
        }
        catch
        {
            <tr>
                <td colspan="4" style="text-align:center">No Internet Connection
                <td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.PagedListPager(Model,
    page => Url.Action("Index",
        new
        {
            page,
            Search = Request.QueryString["Search"]
        }
    ),
    new PagedListRenderOptions()
    {
        UlElementClasses= new [] {"pagination"},
        LiElementClasses= new [] {"page-item", "page-link"}
    })
</div>

